<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context="android.dominion.ui.activity.GameActivity">

    <data class="GameBinding">

        <import type="android.view.View" />

        <import type="android.dominion.ui.converter.BooleanConverter" />

        <variable
            name="viewModel"
            type="android.dominion.ui.viewModel.GameViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_start_game"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick='@{() -> viewModel.startGame()}'
            android:text="START"
            android:visibility='@{BooleanConverter.hideIfTrue(viewModel.isGameRunning())}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_hand"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="#00FF00"
            android:text="Hand"
            app:layout_constraintEnd_toEndOf="@id/rv_hand"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_board"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="#00FF00"
            android:text="Board"
            app:layout_constraintEnd_toEndOf="@id/rv_board"
            app:layout_constraintStart_toStartOf="@id/rv_board"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_hand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility='@{BooleanConverter.showIfTrue(viewModel.isGameRunning())}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rv_board"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_hand" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_board"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility='@{BooleanConverter.showIfTrue(viewModel.isGameRunning())}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_log"
            app:layout_constraintStart_toEndOf="@id/rv_hand"
            app:layout_constraintTop_toBottomOf="@id/tv_board" />

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text='@{viewModel.log}'
            android:visibility='@{BooleanConverter.showIfTrue(viewModel.isGameRunning())}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rv_board"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
