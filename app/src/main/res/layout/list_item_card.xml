<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="CardListItemBinding">

        <import type="android.dominion.ui.converter.BooleanConverter" />

        <variable
            name="viewModel"
            type="android.dominion.ui.adapter.CardListRecyclerAdapter.CardListItemViewModel" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="80dp"
        android:layout_height="128dp"
        android:onClick='@{() -> viewModel.onClick()}'
        android:padding="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src='@{viewModel.card.imageId}'
            tools:src="@drawable/i_card_copper" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text='@{viewModel.cardCount}'
            android:textColor="#FFFFFF"
            android:textSize="29sp"
            android:visibility='@{BooleanConverter.showIfTrue(viewModel.displayCount)}'
            tools:text="6" />

    </android.support.v7.widget.CardView>

</layout>